{
  "extends": ["@nwlnexus/config/typescript"],
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "composite": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "module": "preserve",
    "target": "ES2020",
    "lib": ["ES2020"],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "zod"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
